<?xml version="1.0" encoding="UTF-8"?>
<templates	xml:space="preserve">

	<t t-name="owl_playground.todoList" owl="1">
		<input type="text" placeholder="Enter a new Task" t-on-keyup="addTodo" t-ref="todoinput" ></input>

		<div t-foreach="this.todoList" t-as="todo" t-key="todo.id">
			<Todo todo="todo" toggleState.bind="toggleState"/>
		</div>
	</t>

</templates>