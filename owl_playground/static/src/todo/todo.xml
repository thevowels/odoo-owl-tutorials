<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

	<t t-name="owl_playground.todo" owl="1">
		<span t-att-class="{'text-muted text-decoration-line-through':props.todo.done}">
			<input type="checkbox" t-att-checked="props.todo.done" t-on-click="onClick"/>
			<t t-esc="props.todo.id"/>. <t t-esc="props.todo.description"/>
		</span>
		<span class="fa fa-remove" t-on-click="doDel"/>

	</t>
</templates>